<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundColor">

    <!-- Mode Selection Spinner -->
    <TextView
        android:id="@+id/mode_spinner_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Mode"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/mode_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/spinner_background"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/frequency_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Max Frequency (Hz)"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/amplitude_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Amplitude"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/min_frequency_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Min Frequency (Hz)"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/sweep_rate_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sweep Rate (Hz per second)"
        android:inputType="numberDecimal"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/channels_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Channels"
        android:inputType="number"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/play_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="16sp"
        android:textColor="@color/primaryTextColor"
        android:padding="12dp"
        android:background="@drawable/button_background"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
